<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.ToolBar">
        <item name="android:textColorPrimary">@color/white</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.FullScreen">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppText" parent="@android:style/TextAppearance">
    </style>

    <style name="AppText.Headline">
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Headline</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="AppText.Title">
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Title</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppText.Subhead">
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Subhead</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppText.Body">
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Body1</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppText.Caption">
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Caption</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppText.Button">
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Button</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppText.Small">
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
    </style>

    <style name="AppText.Medium">
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>


</resources>
